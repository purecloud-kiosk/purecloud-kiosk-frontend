{
  "name": "purecloud-kiosk-dashboard",
  "version": "1.0.0",
  "description": "Front-end dashboard for PureCloud Kiosk",
  "main": "server.js",
  "dependencies": {
    "app-module-path": "^1.0.5",
    "compression": "^1.6.0",
    "concurrently": "^2.0.0",
    "cookie-parser": "^1.4.0",
    "css-loader": "^0.23.1",
    "express": "^4.13.3",
    "fbemitter": "^2.0.0",
    "flux": "^2.1.1",
    "history": "^1.13.1",
    "http-proxy": "^1.13.0",
    "react": "^0.14.3",
    "react-cropper": "^0.6.0",
    "react-date-picker": "^4.0.7",
    "react-dom": "^0.14.3",
    "react-file-input": "^0.2.5",
    "react-notification-system": "^0.2.6",
    "react-notify": "^2.0.1",
    "react-popup": "^0.2.2",
    "react-popups": "^1.2.2",
    "react-router": "^1.0.2",
    "react-time-picker": "^1.1.0",
    "request": "^2.69.0",
    "serve-favicon": "^2.3.0",
    "style-loader": "^0.13.0"
  },
  "devDependencies": {
    "babel-core": "^6.5.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "bower": "^1.6.5",
    "browserify": "^12.0.1",
    "chai": "^3.4.1",
    "less": "^2.6.0",
    "less-plugin-clean-css": "^1.5.1",
    "mocha": "^2.3.4",
    "nodemon": "^1.8.1",
    "put-cli": "^0.1.0",
    "uglifyify": "^3.0.1",
    "watch": "^0.17.1",
    "watchify": "^3.7.0"
  },
  "scripts": {
    "postinstall": "bower install",
    "move-bootstrap-fonts": "put bower_components/bootstrap/fonts/{file} dist/fonts/{file}",
    "move-font-awesome-fonts": "put bower_components/font-awesome/fonts/{file} dist/fonts/{file}",
    "move-rdash-ui-fonts": "put bower_components/rdash-ui/dist/fonts/{file} dist/fonts/{file}",
    "move-fonts": "npm run move-bootstrap-fonts && npm run move-font-awesome-fonts && npm run move-rdash-ui-fonts",
    "build-js": "browserify jsx/index.jsx -t [babelify --presets [es2015 react] --extensions .jsx] -t uglifyify --extension=.jsx | uglifyjs -c > dist/bundle.min.js",
    "less": "lessc --clean-css less/index.less dist/css/dashboard.min.css --source-map-rootpath=/",
    "watch-js": "watchify jsx/index.jsx -t [babelify --presets [es2015 react] --extensions .jsx] --extension=.jsx -o  dist/bundle.min.js -v",
    "watch-less": "watch 'npm run less' less",
    "build": "npm run move-fonts && npm run less && npm run build-js",
    "watch": "npm run move-fonts && concurrently -k 'npm run watch-js' 'npm run watch-less'",
    "start-dev": "npm run build-js && concurrently -k 'npm run watch' 'nodemon server.js'",
    "start": "node server.js"
  },
  "author": "Charlie Duong",
  "license": "ISC"
}
